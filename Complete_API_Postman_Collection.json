      "item": [
        {
          "name": "Doctor Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('signup_token', jsonData.signup_token);",
                  "    console.log('Signup token saved:', jsonData.signup_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"TestDoctor\",\n  \"email\": \"test.doctor@example.com\",\n  \"mobile\": \"9876543210\",\n  \"password\": \"TestPass123!\",\n  \"role\": \"doctor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/doctor-signup",
              "host": ["{{base_url}}"],
              "path": ["doctor-signup"]
            },
            "description": "Register a new doctor and receive OTP via email"
          }
        },
        {
          "name": "Doctor Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('access_token', jsonData.access_token);",
                  "    pm.environment.set('refresh_token', jsonData.refresh_token);",
                  "    pm.environment.set('doctor_id', jsonData.doctor_id);",
                  "    console.log('Tokens saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test.doctor@example.com\",\n  \"otp\": \"123456\",\n  \"jwt_token\": \"{{signup_token}}\",\n  \"role\": \"doctor\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/doctor-verify-otp",
              "host": ["{{base_url}}"],
              "path": ["doctor-verify-otp"]
            },
            "description": "Verify OTP and create doctor account"
          }
        },
