# Application Configuration
APP_NAME=PaddleOCR Microservice
APP_VERSION=1.0.0
APP_DESCRIPTION=A microservice for text recognition using PaddleOCR

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# PaddleOCR Configuration
PADDLE_OCR_LANG=en
PADDLE_OCR_USE_ANGLE_CLS=true
PADDLE_OCR_SHOW_LOG=false

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/png", "image/gif", "image/bmp", "image/tiff"]

# Webhook Configuration
# Enable/disable webhook functionality globally
WEBHOOK_ENABLED=true

# Default webhook settings (these can be overridden via API)
DEFAULT_WEBHOOK_URL=https://n8n.srv795087.hstgr.cloud/webhook/bf25c478-c4a9-44c5-8f43-08c3fcae51f9
DEFAULT_WEBHOOK_METHOD=POST
DEFAULT_WEBHOOK_TIMEOUT=30
DEFAULT_WEBHOOK_RETRY_ATTEMPTS=3
DEFAULT_WEBHOOK_RETRY_DELAY=1

# Default webhook headers (JSON format)
DEFAULT_WEBHOOK_HEADERS={"Content-Type": "application/json"}

# Default webhook payload template (JSON format, leave empty for default)
DEFAULT_WEBHOOK_PAYLOAD_TEMPLATE=

# Webhook configuration file path (relative to application root)
WEBHOOK_CONFIG_FILE=webhook_configs.json

# Webhook security settings
WEBHOOK_MAX_CONFIGS=100
WEBHOOK_ALLOW_EXTERNAL_URLS=true
WEBHOOK_REQUIRE_AUTHENTICATION=false

# Optional: Redis Configuration (uncomment if using Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=
